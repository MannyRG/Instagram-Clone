<h1> Post</h1>
<div class="postContainer">
    <div class=" postShow col align-self-center"> 

        <img src="<%= post.img[0]%> " alt="" srcset=""> 
        <div class="row justify-content-center">
            <div class="col-4"> <form action="/profile/post/<%=post.id%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE">
            </form> </div> 

            <div class='col-4'><button value="Edit"><a href="/profile/post/<%=post.id%>/edit/"> Edit </a></button></div>   
        </div>   
    </div>

    <div class="postComment"> 
         <div>  </div>
        <div class="commentsSection"> 
        
            <% for(let i = 0; i < post.comments.length; i++ ){ %>
                <div class="col-4">
                    
                        <%= post.comments[i] %>
                </div> 
            <%}%>
         </div>
         <div class="commentText">
        <form >
            <input type="text" placeholder="Add comment" name="">
            <input type="button" name="" value="Post" >
        </form>
    </div>
    </div>

</div>




